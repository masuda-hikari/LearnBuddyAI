# サーバー設定
PORT=3000
NODE_ENV=development

# AI API (いずれか一方を設定)
OPENAI_API_KEY=sk-your-openai-api-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# データベース
DATABASE_PATH=./data/learnbuddy.db

# JWT認証
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS設定（本番環境用）
CORS_ORIGIN=http://localhost:5173

# Stripe決済連携（本番環境用）
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_MONTHLY_PRICE_ID=price_premium_monthly_id
STRIPE_PREMIUM_YEARLY_PRICE_ID=price_premium_yearly_id
STRIPE_EDUCATION_MONTHLY_PRICE_ID=price_education_monthly_id
STRIPE_EDUCATION_YEARLY_PRICE_ID=price_education_yearly_id

# レート制限
FREE_DAILY_QUESTIONS=5
